<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogs</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
    />
    <style>
      td {
        word-break: break-word;
      }
      .action {
        width: 130px;
        text-align: center;
      }
      h2 {
        margin: 30px 0 !important;
      }
      .box-img{
        width: 100px;
        height: 100px;
      }
      .img-list{
        width: 100%;
        height: 100%;
      }
      .password {
        width: 300px;
      }
      input {
        background-color: transparent;
        border: none;
        border-bottom: 1px solid rgb(72, 72, 72);
        color: white;
        width: 100px;
      }
      input:focus {
        outline: none;
      }
    </style>
  </head>
  <body>
    <ul class="nav nav-tabs navbar-dark bg-dark">
      <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">Blogs Panel</a>
        <a class="nav-link active" aria-current="page" href="#">Users Panel</a>

      </li>
      <li class="nav-item">
        <a class="nav-link signout-btn" href="#">Sign out</a>
      </li>
    </ul>

    <div class="container">
      <div class="row">
        <h2>Users Panel</h2>
      </div>
    </div>

    <div class="container" style="padding: 0">
      <div class="message"></div>
    </div>

    <div class="container">
      <div class="row">
        <table class="table table-dark table-striped table-bordered">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Id</th>
              <th scope="col">Title</th>
              <th scope="col">Content</th>
              <th scope="col">Image</th>
              <th scope="col">User_id</th>
              <th scope="col action">Action</th>
            </tr>
          </thead>
          <tbody id="tbody">
            <% for( let i = 0; i < data.length; i++ ) { %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= data[i].id %></td>
              <td><%= data[i].title %></td>
              <td><%= data[i].content %></td>
              <td class="box-img"><img class="img-list" src="<%= data[i].img %>" alt=""></td>
              <td><%= data[i].user_id %></td>

              <td class="action">
                <span id="<%= data[i].id %>" class="btn-delete btn btn-danger">
                  <ion-icon name="trash-outline"></ion-icon>
                </span>
                <span
                  id="update-<%= data[i].id %>"
                  class="btn-update btn btn-info"
                >
                  <ion-icon name="build-outline"></ion-icon>
                </span>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>

        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="/blogs?page_size=<%=page_size %>&page_index=<%= page_index - 1 %>" aria-label="Previous">
                Previous
              </a>
            </li>
            <% for( let i = 1; i <= Math.ceil(total/page_size); i++ ) { %>
            <li class="page-item">
              <a
                class="page-link"
                href="/blogs?page_size=<%=page_size %>&page_index=<%= i %>"
                ><%=i %>
              </a>
            </li>
            <% } %>
            <li class="page-item">
              <a class="page-link" href="/users?page_size=<%=page_size %>&page_index=<%= page_index + 1 %>" aria-label="Next">
                Next
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js
    "></script>
    <script src="/blogs.js"></script>
  </body>
</html>
