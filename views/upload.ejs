<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      #form-upload {
        display: flex;
        flex-direction: column;
        width: 60%;
        margin: auto;
      }

      #upload-btn {
        width: 100px;
        margin-top: 30px;
      }
    </style>
  </head>

  <body>
    <form
      action=""
      method="post"
      enctype="multipart/form-data"
      id="upload-form"
    >
      <h1>Upload your blog here</h1>
      <div>
        <h2>Input title</h2>
        <textarea name="title" id="title" cols="100" rows="5"></textarea>
      </div>
      <div>
        <h2>Input content</h2>
        <textarea name="content" id="content" cols="100" rows="5"></textarea>
      </div>
      <div>
        <h2>Choose your picture</h2>
        <input type="file" name="image" />
      </div>
      <button id="upload-btn">Upload</button>
    </form>
    <script src="/js/upload.js"></script>
  </body>
</html>
